<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    layout_height="wrap_content"
    layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="4dp"
    cardview:cardCornerRadius="2dp"
    cardview:cardUseCompatPadding="true"
    cardview:cardElevation="3dp"
    card_view:cardBackgroundColor="@color/colorWhite">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/news_body">

            <ImageView
                android:id="@+id/news_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="200dp"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/news_title"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/primary_text"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:text="Title"
                    android:paddingTop="@dimen/primary_text_top_padding"
                    android:paddingBottom="@dimen/primary_text_bottom_padding"
                    android:paddingLeft="@dimen/primary_text_right_left_padding"
                    android:paddingRight="@dimen/primary_text_right_left_padding"
                    />

                <TextView
                    android:id="@+id/news_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/supporting_text_bottom_padding"
                    android:paddingLeft="@dimen/supporting_text_right_left_padding"
                    android:paddingRight="@dimen/primary_text_right_left_padding"
                    android:textSize="@dimen/supporting_text"
                    android:textColor="@color/colorBlack"
                    android:text="This is the content of the news."/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>